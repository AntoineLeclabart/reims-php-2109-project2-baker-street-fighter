{% extends 'layout.html.twig' %}
{% block title %}RESULT | {{winner.name|upper}} WINS{% endblock %}
{% block content %}

{% include '/Item/returnHome.html.twig'%}

<section class='result'>
    <h1 class='resultTitle'> RESULT </h1>
        <div class='winner'>
            <img src="/assets/images/{{winner.name|lower}}.png" class ="winnerImage">
            <p>WINNER 🏆{{winner.name}} <br>❤ {{winner.life}}  
            </p>
        </div>

        <div class='loser'>
            <img src="/assets/images/{{loser.name|lower}}.png" class ="loserImage">
            <p> LOSER 💀{{loser.name}} <br>❤ {{loser.life}} 
            </p>
        </div>
</section>

<aside class='fightDetails'>
    <div class='announce'>
        <p>K.O in {{round}} rounds !! Elementary my dear ! 🧐</p>
    </div>
    <div class='fightReview'>
        <p></p>
    </div>
</aside>

{% endblock %}
