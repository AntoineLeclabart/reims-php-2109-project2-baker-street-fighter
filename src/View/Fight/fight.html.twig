{% extends 'layout.html.twig' %}

{% block content %}
<section class='result'>
    <div class='winner'>
        <img src="/assets/images/{{winner.name|lower}}.png" class ="winnerImage">
        <p>🏆: {{winner.name}} <br>❤ {{winner.life}}  <br>Atk: {{winner.strength}}<br>Def: {{winner.defense}}
        </p>
    </div>

    <div class='loser'>
        <img src="/assets/images/{{loser.name|lower}}.png" class ="loserImage">
        <p>💀: {{loser.name}} <br>❤ {{loser.life}} <br>Atk: {{loser.strength}} <br>Def: {{loser.defense}}
        </p>
    </div>
</section>
<section class='fightDetails'>
    <div class='announce'>
    <p>K.O in {{round}} rounds !! Elementary my dear ! 🧐</p>
    </div>

    <div class='fightReview'>
    <p></p>
    </div>
</section>

{% endblock %}
